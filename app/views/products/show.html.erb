<div class="container is-fluid pt-6">
  <h1 class="title is-1"><%= @product.name %></h1>
    <h3 class="title is-4">
      <strong>Price: </strong>$<%= '%.2f' % @product.price %>
    </h3>
    <h3 class="title is-4">
      <strong>About This Coffee: </strong><%= @product.description %>
    </h3>
    <h3 class="title is-4">
      <strong>Coffee Family: </strong><%= @category.name %>
    </h3>
    <%= form_with url: cart_index_path, method: :post do |f| %>
      <%= hidden_field_tag(:product_id, @product.id) %>
      <%= f.select :quantity, options_for_select([1,2,3,4,5]) %>
      <%= button_tag "Add to Cart" %>
    <% end %>
</div>