<div class="container is-fluid pt-6">
  <h1 class="title is-1">Sign Up</h1>
  <%= form_with url: login_index_path, method: :post do |f| %>
    <%= f.label :email, "Email: " %>
    <%= f.text_field :email %>
    <%= f.label :password, "Password: " %>
    <%= f.password_field :password %>
    <%= f.label :password, "Confirm Password: " %>
    <%= f.password_field :password %>
    <% if flash[:error] %>
     <p class="has-text-danger">Incorrect Email/Password Combination</p>
    <% end %>
    <%= button_tag "Login", class: "ml-2" %>
  <% end %>
</div>