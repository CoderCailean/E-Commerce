<div class="container is-fluid pt-6">
  <div class="container is-max-desktop pt-6">
    <h1 class="title is-1">Login</h1>
    <%= form_with url: login_index_path, method: :post do |f| %>
      <%= f.label :email, "Email: ", class: "label mt-4"  %>
      <%= f.text_field :email, class: "input is-rounded" %>
      <%= f.label :password, "Password: ", class: "label mt-4"  %>
      <%= f.password_field :password, class: "input is-rounded" %>
      <% if flash[:error] %>
      <p class="has-text-danger">Incorrect Email/Password Combination</p>
      <% end %>
      <%= button_tag "Login", class: "button mt-4" %>
    <% end %>
  </div>
</div>