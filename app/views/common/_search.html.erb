<%= form_with url: "/search", method: "GET", local: true do |form| %>
  <div class="columns pt-4 pl-5">
    <div class="column is-3">
      <div class="select">
      <%= form.select :category_id, ["All"] + Category.all.collect {|cat| [cat.name, cat.id]}, class: "select"  %>
      </div>
    </div>
    <div class="column is-3">
      <%= form.text_field :query, class: 'input', placeholder: "Search for a product.."  %>
    </div>
    <div class="column is-1">
      <%= form.submit :Search, class: 'button is-primary' %>
    </div>
  </div>
<% end %>
